        <script>
$(function() {
    feather.replace()
    $('table.dataTables').DataTable({
        "pageLength": 50
    });
    
    $(".list-group-item").on("click", function() {
        if( $(".feather", this).hasClass("feather-chevron-right") ){
            $(".feather", this).replaceWith( feather.icons['chevron-down'].toSvg() )
        }else{
            $(".feather", this).replaceWith( feather.icons['chevron-right'].toSvg() )
        }
    })
});

